<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityPage2">

    <EditText
            android:id="@+id/btn_edit_movie"
            android:layout_width="280dp"
            android:layout_height="46dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="400dp"
            android:layout_weight="1"
            android:hint="Add Movie"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Switch
            android:id="@+id/switch1"
            android:layout_width="110dp"
            android:layout_height="46dp"
            android:layout_alignEnd="@+id/btn_edit_movie"
            android:layout_alignRight="@+id/btn_edit_movie"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="Watched"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/save_button"
            android:layout_width="195dp"
            android:layout_height="48dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Save"
            android:backgroundTint="#2EA330"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <Button
            android:id="@+id/btn_delete_button"
            android:layout_width="195dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text="Delete"
            android:backgroundTint="#FF0000"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>